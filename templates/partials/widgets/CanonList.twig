<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">Canons</div>
        <div class="panel-body">
            {% if viewData.canonList|length > 0 %}
                <ul class="list-group">
                    {% for canon in viewData.canonList %}
                        <li class="list-group-item">{{ canon.Name }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There aren't any canons yet</p>
            {% endif %}
            <div class="actions right">
                <a href="/contribute/create/canon" class="btn btn-success ">Add new canon</a>
            </div>
        </div>
    </div>
</div>